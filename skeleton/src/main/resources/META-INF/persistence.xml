<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="defaultPU" transaction-type="RESOURCE_LOCAL">
		<description><![CDATA[Persistence unit for Skeleton]]></description>

		<jta-data-source>java:/DefaultDS</jta-data-source>
		<properties>
			<!-- property name="hibernate.ejb.naming_strategy" value="com.mediagrif.commons.persistence.util.UpperCaseNamingStrategy" / -->
			<property name="jboss.entity.manager.jndi.name " value="java:/defaultPU" />
			<property name="hibernate.default_schema" value="public"/>
		</properties>
	</persistence-unit>

</persistence>
